# Environment Configuration Template
# Copy this to .env and fill in your actual values

# Service Authentication (Generate a secure random token)
SERVICE_AUTH_TOKEN=your-secure-service-token-here

# LLM API Keys (Add your actual API keys)
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here
GEMINI_API_KEY=your-gemini-api-key-here

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/migration_platform
PROJECT_SERVICE_DATABASE_URL=postgresql://user:password@localhost:5432/project_service

# Object Storage (MinIO)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=migration-platform

# Vector Database (Weaviate)
WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=optional-api-key

# Graph Database (Neo4j)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password

# Service URLs
BACKEND_URL=http://localhost:8000
PROJECT_SERVICE_URL=http://localhost:8002
FRONTEND_URL=http://localhost:3000

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/platform.log

# Security
JWT_SECRET_KEY=your-jwt-secret-key-here
ENCRYPTION_KEY=your-encryption-key-here
